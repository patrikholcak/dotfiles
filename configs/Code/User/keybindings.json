// Place your key bindings in this file to overwrite the defaults
[
  /**
   * Editor shortcuts
   *
   * |      Shortcut       |              Description              |
   * | ⌘ + R               | Run task                              |
   * | ⌘ + ⇧ + L           | Break selection into lines            |
   * | ⌘ + ⌥ + L           | Select all occurrences                |
   * | ⌘ + ⇧ + E           | Refactor code                         |
   * | ⌘ + ⇧ + [           | Toggle block comment                  |
   * | ⌘ + ⇧ + W           | Close all editors                     |
   * | ⌘ + ⇧ + C           | Close all folders in explorer         |
   *
   */
  {
    "key": "cmd+r",
    "command": "workbench.action.tasks.runTask"
  },
  {
    "key": "shift+cmd+l",
    "command": "-editor.action.selectHighlights",
    "when": "editorFocus"
  },
  {
    "key": "shift+cmd+l",
    "command": "editor.action.insertCursorAtEndOfEachLineSelected",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+alt+l",
    "command": "editor.action.selectHighlights",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+cmd+c",
    "command": "git.checkout"
  },
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer"
  },
  {
    "key": "shift+cmd+e",
    "command": "editor.action.codeAction",
    "args": { "kind": "refactor.extract", "preferred": true }
  },
  {
    "key": "shift+alt+[BracketLeft]",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+cmd+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "shift+cmd+w",
    "command": "workbench.action.closeAllEditors"
  },
  {
    "key": "shift+cmd+c",
    "command": "-workbench.action.terminal.openNativeConsole"
  },
  {
    "key": "shift+cmd+c",
    "command": "workbench.files.action.collapseExplorerFolders"
  },

  /**
   * Terminal shortcuts
   *
   * |      Shortcut       |              Description              |
   * | ⌘ + K               | Clear terminal output                 |
   * | ⌘ + ⌃ + T           | Togle terminal window                 |
   * | ⌘ + T               | Add new terminal tab                  |
   * | ⌘ + W               | Kill terminal window                  |
   * | ⌘ + ⇧ + arrows      | Switch between active terminal window |
   * | ⌘ + ⌥ + ⇧ + arrows  | Switch between split terminal panes   |
   * | ⌥ + \               | Split terminal                        |
   *
   */
  {
    "key": "cmd+k",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+cmd+t",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "cmd+t",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "shift+cmd+left",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "shift+cmd+right",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "shift+alt+cmd+left",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  {
    "key": "shift+alt+cmd+right",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  {
    "key": "alt+\\",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  }
]
